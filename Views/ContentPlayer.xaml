<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Shadler.Views.ContentPlayer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Shadler.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="12">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock x:Name="PlayerTitle" FontSize="32" />
            <TextBlock x:Name="PlayerYear" Margin="14,0,0,0" FontSize="32" Opacity="0.5"/>
        </StackPanel>

        <MediaPlayerElement x:Name="ContentPlayerElement" Height="400" Grid.Row="1" HorizontalAlignment="Center" AreTransportControlsEnabled="True" />

        <Grid>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Click="PreviousEpisodeClick" Content="Previous" HorizontalAlignment="Left"/>
            <Button Click="FullScreenClick" Content="Watch in FullScreen" HorizontalAlignment="Center"/>
            <Button Click="NextEpisodeClick" Content="Next" HorizontalAlignment="Right"/>

        </Grid>

    </Grid>
</Page>
